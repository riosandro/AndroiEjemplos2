<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.riosgame.ejemplos_libros">
        <uses-permission android:name="android.permission.SET_WALLPAPER"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/imagen7"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Mysegundaactivity">
            <intent-filter>
                <action android:name="android.intent.action.MYSEGUNDAACTIVITY" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".Mysecondactivity">
            <intent-filter>
                <action android:name="android.intent.action.MYSECONDACTIVITY" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

        </activity>
    <activity android:name=".Dibujo">
        <intent-filter>
            <action android:name="android.intent.action.DIBUJO" />
            <category android:name="android.intent.category.DEFAULT" />
        </intent-filter>

    </activity>



    </application>



</manifest>